@model CRUDWithADONet.Models.Student

@{
    ViewData["Title"] = "Edit Student";
}
<h3>@ViewData["Title"]</h3>
<hr />
<form action="Edit" method="post">
    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input type="hidden" class="form-control" asp-for="id" />
        <input type="text" class="form-control" asp-for="first_name" />
        <span asp-validation-for="first_name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Middle Name</label>
        <input type="text" class="form-control" asp-for="middle_name" />
        <span asp-validation-for="middle_name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input type="text" class="form-control" asp-for="last_name" />
        <span asp-validation-for="last_name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Date Of Birth</label>
        <input type="date" class="form-control" asp-for="date_of_birth" />
        <span asp-validation-for="date_of_birth" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Course Name</label>
        <input type="text" class="form-control" asp-for="course_name" />
        <span asp-validation-for="course_name" class="text-danger"></span>
    </div>


    <div class="d-grid">
        <button type="submit" class="btn btn-success">Update</button>
    </div>
</form>

